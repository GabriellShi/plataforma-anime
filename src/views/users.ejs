<%- include("./partials/head-admin") %> <%- include("./partials/header-admin")%>

<main>
  <h1>Lista de Usuarios</h1>
  <% if(users.length > 0){ %>
  <table>
    <thead>
      <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>Nome de Usuário</th>
        <th>E-mail</th>
        <th>Senha</th>
        <th>Ação</th>
      </tr>
    </thead>
    <tbody>
      <% for(let user of users) {%>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.nome %></td>
        <td><%= user.nomedeuser %></td>
        <td><%= user.email %></td>
        <td><%= user.senha %></td>
        <td>
          <a href="/user/<%= user.id %>">Visualizar</a>
          <a href="/user/edit/<%= user.id %>">Editar</a>
          <a href="/user/delete/<%= user.id %>">Excluir</a>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
  <% } else { %>
  <h2>Nenhum Usuário Encontrado</h2>
  <%} %>
</main>

