<%- include("./partials/head-admin") %>
<%- include("./partials/header-admin") %>
<section class="anime-edit">

        
 
    <% if(locals.detailsFilme){ %>

        <main>
            <div class="titulo-principal-anime-edit">
                <h2> Atualizar Filme </h2>
            </div>
            <% if(locals.error){ %>
                <h2> <%= error.message%> </h2>
            <% } %> 
            <form action="/filme/edit/<%= detailsFilme.id %>?_method=put" method="post" enctype="multipart/form-data">

<section class="site-animes-pagina-anime">

    <div class="lado-esquerdo-do-site-pagina-anime">
        <section class="sessao1-pagina-anime">
            <div class="titulo-principal-pagina-anime">
                    <img src="/img/icone.png" alt="">
                    <h2><input value="<%= detailsFilme.nome %>" type="text" name="nome" placeholder="Nome do Anime"  /> - <%= detailsFilme.tipo %> </h2>
            </div>


            
            <div class="sessao1-primeira-parte-lista-anime">
                <div class="capa-do-anime-escolhido">
                    <div class="capa-do-anime-pagina-anime">
                        <img src="<%= detailsFilme.capa %>" alt="capa"/>
                    </div>
                    <input value="<%= detailsFilme.capa %>" type="text" name="capa" />
                    <div class="icones-da-capa-do-anime-lista-anime">
                        <ul>
                            <li><img src="/img/icone-favorito.png" alt=""></li>
                            <li class="lista-de-animes">
                                <h4>Lista</h4>
                                <img src="/img/icone-lista-anime.png" alt="">
                            </li>
                            <li class="icone-gostei-pagina-anime"> 
                            <img src="/img/icone-gostei.png" alt=""> <p>91</p> 
                            </li>
                            <li class="icone-desgostei-pagina-anime"> 
                            <img src="/img/icone-desgostei.png" alt=""> <p>11</p> 
                            </li>
                        </ul>
                    </div>
                </div>
                
                
                <div class="informações-do-anime-lista-anime">
                    <ul>
                        <li><h3>Tipo: <select name="tipo" aria-required="true" aria-invalid="false"><option value=""><%= detailsFilme.tipo %></option><option value="Legendado">Legendado</option><option value="Dublado" >Dublado</option></select></h3></li>
                        <li><h3>Gêneros: <input value="<%= detailsFilme.generos %>" type="text" name="generos" placeholder="Generos" /></h3></li>
                        <li><h3>Autor: <input value="<%= detailsFilme.autor %>" type="text" name="autor" placeholder="Autor do Anime" /></h3></li>
                        <li><h3>Estúdio: <input value="<%= detailsFilme.estudio %>" type="text" name="estudio" placeholder="Estudio do Anime" /></h3></li>
                        
                    </ul>
                </div>
            </div>


                             
            <div class="titulo-assistir-anime-online-lista-anime">
                <h3>Assistir <%= detailsFilme.nome %> Filme em HD com a melhor qualidade</h3>
            </div>

            <div class="sinopse-anime-lista-anime">
                <h2>Sinopse - <%= detailsFilme.nome %></h2>
                <p>
                    <input value="<%= detailsFilme.sinopse %>" type="text" name="sinopse" placeholder="Resenha sobre o Anime" />
                </p>
                
            </div>
        </section>

    </section>
    <% } else {%>
        <h2>Usuario não Entrado por motivos do além</h2>
    <% }  %>
                
                <button type="submit">Atualizar</button>
            </form>
    
       
            <section class="sessao2-pagina-anime">

                <div>
                    <div class="temporadas-pagina-anime">
                        <ul>
                            <li class="numero-da-tempora-pagina-anime"></li>
                            <li class="numero-da-tempora2-pagina-anime">Filme</li>
                        </ul>
                    </div>
                    <div class="numero-do-episodio-pagina-anime">
                        <ul> 
    
                            <li class="capa-e-numero-do-episodio-pagina-anime">
                                <div>
                                    <img src="/img/capa-da-lista-de-episodios-do-anime.png" alt="">
                                </div>
                                <div class="data-lancamento">
                                    <div>
                                        <h3>Episódio 2 - 1</h3>
                                    <h5>19 de março de 2023</h5>
                                    </div>
                                </div>
                            </li>
    
                        
                        </ul>
                    </div>
                </div>
    
    
                
    
            </section>

    </div>


 





  
    <form action="/filme/delete/ <%= detailsFilme.id %>?_method=delete" method="post">
        <h2>Deseja Deletar  esse usuário</h2>
        <a href="/filme"><button type="button">Não</button></a>
        <button type="submit">Sim</button>
    </form>

</section>