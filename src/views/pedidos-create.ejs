<%- include("./partials/head") %>
<%- include("./partials/header") %>




<section class="site-animes-pedidos-de-animes">


    <section class="sect-pedidos">
        <div>
            <a href="#" id="toggleLink">
                <h2>Pedidos de Novos Animes</h2>
            </a>
        </div>

        <div>
            <a href="#" id="toggleLink2">
                <h2>Melhorias e Avisos de Bug</h2>
            </a>
        </div>
    </section>
    <div class="lado-esquerdo-do-site-pagina-anime lado-esquerdo-none targetDiv" >

  
    <div class="titulo-principal-pedidos-pedidosanimes">
        <img src="/img/barra-azul.png" alt="">
        <h2>Pedidos de Novos Animes</h2>
    </div>

    <div class="inf-para-comentar-pedidosanimes">
        <h4>Comente aqui algum Anime que você gostaria de assistir, e que não tem em nosso site.</h4>
    </div>

    <div class="formulario-envio-de-pedido-pedidosanimes">
        <form action="/pedido/create" method="post" enctype="multipart/form-data">


            <div class="titulo-formulario-pedidosanimes">
                <img src="/img/icone-pedido-anime.png" alt="">
                <h4>Faça seu Pedido de Anime</h4>
            </div>

            <div class="info-do-solicitante-pedidosanimes">
                <div class="dados-nome-pedidosaimes dados-pedidosanimes">
                    <label >Nome de Usuário</label>
                    <input id="name" type="text" name="usuario" 
                    placeholder="Seu Nome de Usuário" required>
                </div>
                <div class="dados-email-pedidosaimes dados-pedidosanimes">
                    <label >Email</label>
                    <input id="email" type="email" name="email" 
                    placeholder="Seu e-mail aqui" required>
                </div>
                <div class="dados-nomeanime-pedidosaimes dados-pedidosanimes ">
                    <label >Nome do Anime</label>
                    <input id="name-anime" type="text" name="anime" 
                    placeholder="Nome do Anime que você quer ver no Site" required>
                </div>
            </div>

            <div class="comentario-pedidosanimes">
                <input type="" name="comentario" id="" placeholder="Seu Comentario...">
            </div>

            <div class="info-de-mensagem-publica-pedidosanimes">
                <h5>O envio do pedido ficara publico para que outras pessos possam apoia o pedido. </h5>
            </div>

            <div class="botao-envio-pedidosanimes"><button type="submit">Enviar</button></div>
        </form>
    </div>

    <div id="pedidos-exibidos">
        <!-- Aqui serão exibidos os pedidos de novos animes preenchidos pelos clientes -->
    </div>


        <% if (pedidos.length > 0) { %>
    <h2 class="titulo-coment-pedidos">Pedidos Feitos</h2>
    <div class="comentarios-pedido-anime">
        <% for(let pedido of pedidos.slice(0, 18)) {%>
        <div class="ssas-ss">
            <div class="dados-coment-pedidos">
                <img src="/img/icone-foto-perfil.jpg" alt="">
                <div>
                    <div class="dados-coment-pedidos-filho">
                        <h3> <%= pedido.usuario%></h3><h5> -  ANIME: <%= pedido.anime %></h5>
                        
                    </div>
                    <div>
                        <h4> <%= pedido.comentario %></h4>
                    </div>
                </div>
    
            </div>
    
    
            <div class="botao-deletar-pedido">
                <form action="/pedido/delete/ <%= pedido.id %>?_method=delete" method="post">
                    <h2>Deseja Deletar esse Pedido?</h2>
                    <div>
                        <a href="/pedido/create"><button type="button">Não</button></a>
                        <button type="submit">Sim</button>
                    </div>
                  </form>
            </div>
        </div>
        <% } %>
        <% } %>

       

    </div>


     
</div>





<div class="lado-esquerdo-do-site-pagina-anime lado-esquerdo-none2 targetDiv2" >
    <div class="titulo-principal-pedidos-pedidosanimes">
        <img src="/img/barra-azul.png" alt="">
        <h2>Melhorias do Site</h2>
    </div>

    <div class="inf-para-comentar-pedidosanimes">
        <h4>Comente aqui alguma melhoria que você gostaria de ver no site, ou bug em uma pagina.</h4>
    </div>

    <div class="formulario-envio-de-pedido-pedidosanimes">
        <form action="">
            <div class="titulo-formulario-pedidosanimes">
                <img src="/img/icone-pedido-anime.png" alt="">
                <h4>Faça um Feedback de melhoria ou Relato de um bug</h4>
            </div>

            <div class="info-do-solicitante-pedidosanimes">
                <div class="dados-nome-pedidosaimes dados-pedidosanimes">
                    <label >Nome de Usuário</label>
                    <input id="name" type="text" name="Nome" 
                    placeholder="Seu nome de usuário aqui" required>
                </div>
                <div class="dados-email-pedidosaimes dados-pedidosanimes">
                    <label >Email</label>
                    <input id="email" type="email" name="Email" 
                    placeholder="Seu E-mail aqui" required>
                </div>
            </div>

            <div class="comentario-pedidosanimes">
                <input type="" name="" id="" placeholder="Seu Comentario...">
            </div>


            <div class="botao-envio-pedidosanimes"><button>Enviar</button></div>
        </form>
    </div>

</div>
<script>
    $(document).ready(function () {
        $("#toggleLink").click(function () {
            if ($(".targetDiv").is(":visible")) {
                $(".targetDiv").hide(); // Se já estiver visível, oculte
            } else {
                $(".targetDiv").show(); // Caso contrário, mostre
                $(".targetDiv2").hide(); // Certifique-se de que o outro formulário seja oculto
            }
        });

        $("#toggleLink2").click(function () {
            if ($(".targetDiv2").is(":visible")) {
                $(".targetDiv2").hide(); // Se já estiver visível, oculte
            } else {
                $(".targetDiv2").show(); // Caso contrário, mostre
                $(".targetDiv").hide(); // Certifique-se de que o outro formulário seja oculto
            }
        });




    });
</script>



</section>

<%- include("./partials/footer") %> 